{
  "name": "card-crafter",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "cd client && vue-cli-service serve",
    "build": "npm run migrate up && cd client && vue-cli-service build",
    "lint": "cd client && vue-cli-service lint",
    "start": "node server/server.js",
    "start:dev": "npm run migrate up && (nodemon server/server.js & npm run serve)",
    "migrate": "node-pg-migrate"
  },
  "dependencies": {
    "express": "^4.17.1",
    "pg": "^7.12.1",
    "uuidv4": "^4.0.0",
    "vue": "^2.5.17",
    "vue-material": "^1.0.0-beta-11",
    "vue-multiselect": "^2.1.6",
    "vue-router": "^3.0.1",
    "vuex": "^3.0.1"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.9.2",
    "@vue/cli-plugin-eslint": "^3.9.2",
    "@vue/cli-service": "^3.9.3",
    "@vue/eslint-config-prettier": "^4.0.1",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.16.0",
    "eslint-plugin-vue": "^5.0.0",
    "lint-staged": "^8.1.5",
    "node-pg-migrate": "^3.22.0",
    "nodemon": "^1.19.1",
    "vue-template-compiler": "^2.5.17"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended",
      "@vue/prettier"
    ],
    "rules": {},
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,vue}": [
      "vue-cli-service lint",
      "git add"
    ]
  }
}
